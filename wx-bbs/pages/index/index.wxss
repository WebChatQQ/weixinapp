/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.index-head-logo-f{
  font-family:"微软雅黑";
  font-size: 28rpx;
  color: #fff;
}

.flex {
  flex:1;
}
.rel {
  position: relative;
}
.border-slice {
  border-bottom: 10px solid #eee;
}
.head {
  height: 110px;
}
.head-banner {
  background: url(http://i.pengxun.cn/images/bms1/050_app[1].jpg) no-repeat;
  background-size: 100%;
  height: 110px;
  position: absolute;
  width: 100%;
  top: 0px;
  left: 0px;
  z-index: -2;
}
.index-head-logo {
  padding-left: 18px;
  padding-top: 30px;
  display: flex;
}
.index-head-logo-img {
  height: 60px;
  width: 60px;
}
.index-head-logo-f { 
  margin-left: 15px;
  flex:1;
}
.index-head-bottom {
  height: 30px;
  width: 100%;
  text-align: center;
  line-height: 30px;
  display: flex;
}
.index-sign {
  background: url(http://i.pengxun.cn/static/vzan/web/index/images/01/icon1.png) no-repeat 33% 2%;
  background-size:552%;
  vertical-align: -5px;
  height: 24px;
  width: 24px;
  display: inline-block;
}
.index-focus {
  background: url(http://i.pengxun.cn/static/vzan/web/index/images/01/icon1.png) no-repeat 62% 2%;
  background-size:552%;
  vertical-align: -6px;
  height: 24px;
  width:24px;
  display: inline-block;
}
.index-heading-scrol view {
  float:left;
  padding:0 14rpx;
  font-size: 30rpx;
  font-family: "Microsoft YaHei",Arial;
}
.index-heading-scrol {
  margin-top: 10px;
  margin-bottom: 10px;
  padding-bottom:10px;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  border-bottom:10px solid #eee;
}
.index-heading-content {
    transition-timing-function: cubic-bezier(0.1, 0.57, 0.1, 1);
    transition-duration: 0ms;
    transform: translate(0px, 0px) translateZ(0px);
    overflow: hidden;
    display: inline-block;
    white-space: nowrap;
    width: 100%;
    height: 30px;
}
.index-heading-more {
  height: 22px;
  position: absolute;
  right: 0px;
  width: 40px;
  background-color: #fff;
  cursor:pointer;
  font-size: 31.2rpx;
  text-align: center;
}
.bankuai {
  margin: 5px 5px;
  border: 1px solid #17b5ee;
  width: 60px;
  text-align: center;
}
.fl text {
  color:#000;
}
.index-poster-name {
  color:#5a85ce;
  font-weight:bold;
  font-size:31rpx;
  font-family: "Microsoft YaHei",Arial;
}
.index-poster-kind {
  background-color: #5bc3ff;
  border-radius: 2px;
  margin-left: 5px;
  height: 130rpx;
  font-size: 22rpx;
  color: #fff;
  font-family: "Microsoft YaHei",Arial;
  vertical-align:1px;
  padding: 0px 5px;
}
.index-post-info {
  font-size:24rpx;
  font-family: "Microsoft YaHei",Arial;
  margin-right: 10px;
  margin-top: 3px;
  color: #858585;
}
.article-content-container{
  color: black;
  line-height: 150%;
  margin-bottom: 8px;
  padding: 0 12px;
  overflow: hidden;
  text-overflow: ellipsis;
}
.section-theme {
  color:#17b5ee;
  border: 1px solid #17b5ee;
  border-radius: 2px;
  font-size: 25rpx;
  line-height: 12px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 5px;
}
.article-content {
 margin-left: 2px;
 font-family: "Microsoft YaHei",Arial;
 font-size: 30rpx;
 height: 26px;
 overflow: hidden;
 text-overflow: ellipsis;
}
.article-content-title {
  font-size:18px;
  font-family:Microsoft YaHei,Arial;
  font-weight:bold;
  display:block;
}
.icon-zhuan {
    vertical-align: -4px;
    width: 17px;
    height: 17px;
    background: url(http://i.pengxun.cn/static/vzan/web/index/images/icon1.png) no-repeat 34% 37%;
    background-size: 735%;
    display: inline-block;
}
.icon-ping {
    vertical-align: -4px;
    width: 17px;
    height: 17px;
    background: url(http://i.pengxun.cn/static/vzan/web/index/images/icon1.png) no-repeat 62% 37%;
    background-size: 735%;
    display: inline-block;
}
.icon-zan {
    vertical-align: -3px;
    width: 17px;
    height: 17px;
    background: url(http://i.pengxun.cn/static/vzan/web/index/images/icon1.png) no-repeat 34% 67%;
    background-size: 735%;
    display: inline-block;
}
.em {
  color:#858585;
  font-size:28.8rpx;
  font-family: "Microsoft YaHei",Arial;
  padding: 0 2px;
}
.fr {
  float:right;
}
.res {
  width: 33%;
  text-align: center;
  border-right: 1px solid #eee;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  height: 30px;
  line-height: 30px;
}
.res-info {
  display: flex;
  padding-left: 13px;
}
.res-content-name {
  color: #5a85ce;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
  font-family: "Microsoft YaHei",Arial;
  line-height:normal;
  float:left;
}
.res-content-time {
  color: #cccccc;
  font-size: 26.4rpx;
  margin-right: 10px;
  font-family: "Microsoft YaHei",Arial;
  line-height:normal;
  float:right;
}
.res-content {
  font-size: 30rpx;
  line-height: 140%;
  font-family: "Microsoft YaHei",Arial;
  overflow: hidden;
  text-overflow: ellipsis;
  height:60px;
}