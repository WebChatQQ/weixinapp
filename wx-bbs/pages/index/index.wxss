/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

text {
  font-family:"微软雅黑";
  font-size: 28rpx;
  color: #fff;
}
.body {
}
.flex {
  flex:1;
}
.rel {
  position: relative;
}
.head {
  height: 110px;
}
.head-banner {
  background: url(http://i.pengxun.cn/images/bms1/050_app[1].jpg) no-repeat;
  background-size: 100%;
  height: 110px;
  position: absolute;
  width: 100%;
  top: 0px;
  left: 0px;
  z-index: -2;
}
.index-head-logo {
  padding-left: 18px;
  padding-top: 30px;
  display: flex;
}
.index-head-logo-img {
  height: 60px;
  width: 60px;
}
.index-head-logo-f { 
  margin-left: 15px;
  flex:1;
}
.index-head-bottom {
  height: 30px;
  width: 100%;
  text-align: center;
  line-height: 30px;
  display: flex;
}
.index-sign {
  background: url(http://i.pengxun.cn/static/vzan/web/index/images/01/icon1.png) no-repeat 33% 2%;
  background-size:552%;
  vertical-align: -5px;
  height: 24px;
  width: 24px;
  display: inline-block;
}
.index-focus {
  background: url(http://i.pengxun.cn/static/vzan/web/index/images/01/icon1.png) no-repeat 62% 2%;
  background-size:552%;
  vertical-align: -6px;
  height: 24px;
  width:24px;
  display: inline-block;
}
.index-heading-scrol view {
  float:left;
  padding:0 14rpx;
  font-size: 30rpx;
  font-family: "Microsoft YaHei",Arial;
}
.index-heading-scrol {
  margin-top: 10px;
  width: 9999999px;
  overflow: hidden;
}
.index-heading-content {
    transition-timing-function: cubic-bezier(0.1, 0.57, 0.1, 1);
    transition-duration: 0ms;
    transform: translate(0px, 0px) translateZ(0px);
}
.index-heading-more {
  height: 20px;
  position: absolute;
  right: 0px;
  width: 40px;
  background-color: #fff;
  cursor:pointer;
  font-size: 31.2rpx;
  text-align: center;
}