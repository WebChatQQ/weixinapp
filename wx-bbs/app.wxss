.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 



.c-fullwidth {
  width: 100%;
}
.c-block {
  display: block;
}
.page-container {
    width: 100%;
    height: 100%;
}
.icon-reward {
  vertical-align: -4px;
  width: 17px;
  border: 0;
  height: 17px;
  background: url(http://i.pengxun.cn/static/vzan/web/index/images/post-big-pic-06.png) no-repeat 0 0;
  background-size: 100%;
  display: inline-block;
  margin-right: 2px;
}
.icon-zhuan {
    vertical-align: -4px;
    width: 17px;
    height: 17px;
    background: url(http://i.pengxun.cn/static/vzan/web/index/images/icon1.png) no-repeat 34% 37%;
    background-size: 735%;
    margin-right: 2px;
    display: inline-block;
}
.icon-ping {
    vertical-align: -4px;
    width: 17px;
    height: 17px;
    background: url(http://i.pengxun.cn/static/vzan/web/index/images/icon1.png) no-repeat 62% 37%;
    background-size: 735%;
    margin-right: 2px;
    display: inline-block;
}
.icon-zan {
    vertical-align: -3px;
    width: 17px;
    height: 17px;
    background: url(http://i.pengxun.cn/static/vzan/web/index/images/icon1.png) no-repeat 34% 67%;
    background-size: 735%;
    margin-right: 2px;
    display: inline-block;
}
.em {
  color:#858585;
  font-size:28.8rpx;
  font-family: "Microsoft YaHei",Arial;
  padding: 0 2px;
}

.fl{
  float:left;
  width: 14.28%;
  padding: 5px;
  text-align: center;
}

.qqface-img{
    background: url(http://i.pengxun.cn/content/images/imgpost2/qqface.jpg) no-repeat left top;
    background-size: 100%;
    width: 29px;
    height: 29px;
}
.post-qq-face{
    width: 100%;
    height: 185px;
    padding: 10px;
}
.aricle-user-wrap {
  position: relative;
}
.index-poster-name {
  color:#5a85ce;
  font-weight:bold;
  font-size:31rpx;
  font-family: "Microsoft YaHei",Arial;
  width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
.index-poster-kind {
  background-color: #5bc3ff;
  border-radius: 2px;
  margin-left: 5px;
  height: 130rpx;
  font-size: 22rpx;
  color: #fff;
  font-family: "Microsoft YaHei",Arial;
  vertical-align:1px;
  padding: 0px 5px;
}
.index-poster-arrow {
  border-width: 0 2rpx 2rpx 0;
  border-style: solid;
  border-color: #c8c8cd;
  position: absolute;
  transform: rotate(45deg);
  -webkit-transform: rotate(45deg);
  top: 0;
  right: 30rpx;
  height: 14rpx;
  width: 14rpx;
}
.index-post-info {
  font-size:24rpx;
  font-family: "Microsoft YaHei",Arial;
  margin-right: 10px;
  color: #858585;
}
.article-content-container{
  color: black;
  line-height: 150%;
  margin-bottom: 8px;
  padding: 0 12px;
  overflow: hidden;
  text-overflow: ellipsis;
}
.article-content-title {
  font-size:18px;
  font-family:Microsoft YaHei,Arial;
  font-weight:bold;
  display:block;
}
.section-theme {
  color:#17b5ee;
  border-radius: 2px;
  font-size: 25rpx;
  line-height: 25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 5px;
  border: 1px solid #17b5ee;
}
.article-content {
 margin-left: 2px;
 font-family: "Microsoft YaHei",Arial;
 font-size: 30rpx;
 height: 26px;
 overflow: hidden;
 text-overflow: ellipsis;
}
.comment-voice-container {
  margin-top: 4px;
}
.audio-wrap {
  width:150px;
  height: 30px;
  border-radius: 5px;
  border: 1px solid #d6d6d6;
  padding: 3px 0;
  float:left;
}
.audio-time-wrap {
 height: 30px;
 line-height: 30px;
 padding-left: 10px;
 font-family: "Microsoft YaHei",Arial; 
 float: left;
 font-size: 26rpx; 
}
.comment-imgs-container{
    margin-top: 5px;
}
.fr {
  float:right;
}
.res {
