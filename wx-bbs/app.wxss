  padding: 5px 0px;
  border-bottom: 1px solid #d6d6d6;
}
.reward-logo-icon {
    top: 0;
    left: 0;
    margin: 4px 0;
    margin-left: 12px;
    width: 15px;
    height: 15px;
    border: 0;
    background: url(http://i.pengxun.cn/static/vzan/web/index/images/post-big-pic-06.png?v=1) no-repeat 0 -15px;
    background-size: 100%;
}
.praise-logo-container {
  width: 93%;
  margin-left: 5px;
}
.reward-logo-img-container {
  padding: 2px 2px;
  display: inline-block;
}
.praise-logo {
  display: flex;
  padding: 5px 0px;
  border-bottom: 1px solid #d6d6d6;
}
.praise-logo-icon {
  top: 0;
  left: 0;
  margin-top: 4px;
  margin-left: 12px;
  width: 15px;
  height: 15px;
  background: url(http://i.pengxun.cn/static/vzan/web/index/images/post-big-pic-06.png?v=1) no-repeat 0 -105px;
  background-size: 100%;
}
.praise-logo-img-container {
  padding: 2px 2px;
  display: inline-block;
}
.res-content-name {
  color: #5a85ce;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
  font-family: "Microsoft YaHei",Arial;
  line-height:normal;
  float:left;
}
.res-content-time {
  color: #cccccc;
  font-size: 26.4rpx;
  margin-right: 10px;
  font-family: "Microsoft YaHei",Arial;
  line-height:normal;
  float:right;
}
.res-content {
  font-size: 30rpx;
  line-height: 140%;
  font-family: "Microsoft YaHei",Arial;
  overflow: hidden;
  text-overflow: ellipsis;
}
.comment-image{
  display:flex; 
  margin: 5px; 
}
.comment-content-image-wrap {
  display: inline-block;
}
.img-remove{
    position:absolute;
    width: 16px;
    height: 16px;
    display: block;
    background: rgba(0,0,0,.5) url(http://i.pengxun.cn//content/images/imgpost2/01/post-big-pic-03.png) no-repeat 0 -16px;
    background-size: 100%;
    top: 0;
    right: 0;
}
.comment-icon {
  top: 0;
  left: 0;
  margin-top: 10px;
  margin-left: 12px;
  width: 15px;
  height: 15px;
  background: url(http://i.pengxun.cn/static/vzan/web/index/images/post-big-pic-06.png?v=1) no-repeat 0 -90px;
  background-size: 100%;
}
