/*** 录音 ***/
.record-container {
  bottom: 0;
  left: 0;
  width: 100%;
  background: #4d4d4d;
  position: absolute;
  height: 40%;
}
.recored-cancle-wrap {
  color:red;
  padding: 20rpx;
  text-align: right;
}
.record-wrap{
  position: relative;
  top: 40%;
  margin-top: -150rpx;
}
.record-time{
  display: block;
  text-align: center;
  margin: 100px 0;
}
.start-record {
  width: 100%;
  margin: auto 0;
  text-align: center;
}
.record-tip-wrap {
  width: 100%;
  text-align: center;
  color: #ffffff;
  margin-top: 20rpx;
}
.stop-record{
  width: 150rpx;
  height: 150rpx;
  border: 20rpx solid #ffffff;
  background-color: #f55c23;
  border-radius: 130rpx;
  margin: 0 auto;
}