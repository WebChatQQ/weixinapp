
/** 回复评论 **/


.comment-re-content-box {
  border: 1px solid #d6d6d6;
  padding: 10rpx;
}

.tarea {
  width: 100%;
  height: 200rpx;
}

.comment-re-op-box {
  width: 100%;
  height: 48rpx;
  margin-top: 12rpx;
}

.comment-re-btn-box {
  display: inline-block;
}

.comment-re-btn {
  font-size: 12px;
  height: 20px;
  width: 40px;
  box-sizing: content-box;
  line-height: 20px;
  margin-left: 10rpx;
}

.comment-re-imgs-box {
  padding-left: 7rpx;
  margin-bottom: 7rpx;
}

.comment-re-img-box {
  width: 18%;
  height: 60px;
  margin: 7rpx;
  display: inline-block;
}
.comment-re-box {
  position: absolute;
  bottom: 0;
  left: 0;
  background-color: #fafafa;
  width: 100%;
  padding: 30rpx 30rpx 16rpx 30rpx;
}
