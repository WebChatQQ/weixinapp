/**app.wxss**/
@import '/common/weui.wxss';
@import '/common/common.wxss';
@import '/common/icon.wxss';

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

image {
  width: 100%;
  height: 100%;
}

/*** 隐藏顶部选择 ***/

.top-category-box {
  background: #fff;
  width: 100%;
  white-space: nowrap;
  position: relative;
  top: 0;
  z-index: 1;
}

.topCateogry {
  padding: 0 24rpx;
  display: table-cell;
  text-align: center;
  vertical-align: bottom;
}

/*** 语音 ***/

.voice-icon {
  width: 150px;
  height: 22px;
  text-align: middle;
  background-color: #fff;
  border: 1px solid #d6d6d6;
  border-radius: 5px;
  display: inline-block;
  padding: 3px 0;
  margin: 10rpx 14rpx;
}

/*** 转 赞 评 ***/

.article-content-share-box {
  width: 100%;
  height: 40rpx;
  padding: 12rpx 0;
  display: flex;
  display: -webkit-box;
  display: -webkit-flex;
}

.article-content-share {
  flex: 1;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  text-align: center;
}

.article-content-share-reward::before {
  content: " ";
  vertical-align: -4px;
  width: 17px;
  height: 17px;
  background: url(http://i.pengxun.cn/static/vzan/web/index/images/post-big-pic-06.png) no-repeat 0 0;
  background-size: 100%;
  display: inline-block;
  margin-right: 10rpx;
}

.article-content-share-comment::before {
  content: " ";
  vertical-align: -4px;
  width: 17px;
  height: 17px;
  background: url(http://i.pengxun.cn/static/vzan/web/index/images/icon1.png) no-repeat 62% 37%;
  background-size: 735%;
  display: inline-block;
  margin-right: 10rpx;
}

.article-content-share-praise::before {
  content: " ";
  vertical-align: -3px;
  width: 17px;
  height: 17px;
  background: url(http://i.pengxun.cn/static/vzan/web/index/images/icon1.png) no-repeat 34% 67%;
  background-size: 735%;
  display: inline-block;
  margin-right: 10rpx;
}

/*** 图标 ***/

.reward-icon {
  top: 0;
  left: 0;
  margin: 4px 0;
  margin-left: 12px;
  width: 15px;
  height: 15px;
  border: 0;
  background: url(http://i.pengxun.cn/static/vzan/web/index/images/post-big-pic-06.png?v=1) no-repeat 0 -15px;
  background-size: 100%;
}

.praise-icon {
  top: 0;
  left: 0;
  margin-top: 4px;
  margin-left: 12px;
  width: 15px;
  height: 15px;
  background: url(http://i.pengxun.cn/static/vzan/web/index/images/post-big-pic-06.png?v=1) no-repeat 0 -105px;
  background-size: 100%;
}

.article-img-box {
  padding-left: 2rpx;
  padding-bottom: 2rpx;
  width: 33px;
  height: 33px;
  display: inline-block;
  vertical-align: middle;
}

/*** 评论信息 ***/

.comment-icon {
  top: 0;
  left: 0;
  margin-top: 10px;
  margin-left: 12px;
  width: 15px;
  height: 15px;
  background: url(http://i.pengxun.cn/static/vzan/web/index/images/post-big-pic-06.png?v=1) no-repeat 0 -90px;
  background-size: 100%;
  display: inline-block;
}

.comments-box {
  padding-left: 66rpx;
}

.comment-box {
  padding: 20rpx 24rpx 20rpx 0;
  border-bottom: 1px solid #858585;
  display: flex;
  display: -webkit-box;
  display: -webkit-flex;
}

/*** 用户评论头像 ***/

.comment-user-img {
  width: 35px;
  height: 35px;
}

.comment-content-box {
  flex: 1;
  -webkit-flex: 1;
  -webkit-box-flex: 1;
  padding-left: 80rpx;
  width: 100%;
}

.comment-name-box {
  color: #5a85ce;
  max-width: 220rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

/*** 评论图片 ***/

.comment-content-img-box {
}

.comment-content-img {
  width: 132rpx;
  height: 132rpx;
  margin-right: 5rpx;
  display: inline-block;
}

.more-comment-box{
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 24rpx;
  border-top: 1px solid #858585;
  color: #5a85ce;
}


/*** 搜索 ***/

.pop{
  background-color: rgba(0, 0, 0, 0.3);
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.search-box {
  height: 101rpx;
  width: 100%;
  background-color: #fff;
  padding: 18rpx 20rpx 18rpx 30rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.search-input-box {
  display: inline-block;
  border-radius: 3px;
  padding-left: 32px;
  background: #f1f1f3 url(http://i.pengxun.cn/static/vzan/web/index/images/searh-gray.png) no-repeat top left;
  background-size: 32px 32px;
  color: #ccc;
  height: 32px;
  line-height: 32px;
  width: 500rpx;
  padding-top: 6rpx;
}
.search-input {
  color: #000000;
}
.search-btn-box {
  display: inline-block;
  margin-left: 13rpx;
  vertical-align: top;
}

/** 回复评论 **/
.comment-re-box{
  position: absolute;
  bottom: 0;
  left: 0;
  background-color: #fafafa;
  width: 100%;
  padding: 30rpx 30rpx 16rpx 30rpx;
}
.comment-re-content-box{
  border: 1px solid #d6d6d6;
  padding: 10rpx;
}
.tarea{
 width: 100%; 
}
.comment-re-op-box{
  width: 100%;
  height: 48rpx;
  margin-top: 12rpx;
}
.comment-re-btn-box{
  display: inline-block;
}
.comment-re-btn{
  font-size: 12px;
  height: 20px;
  width: 40px;
  box-sizing: content-box;
  line-height: 20px;
  margin-left: 10rpx;
}
