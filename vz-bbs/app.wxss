/**app.wxss**/
@import '/common/weui.wxss';
@import '/common/common.wxss';
@import '/common/icon.wxss';

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

image {
  width: 100%;
  height: 100%;
}


.articles-box {
  height: 1100rpx;
  background: #fff;
}

/*** 文章 ***/






























/*** 搜索 ***/

.pop {
  background-color: rgba(0, 0, 0, 0.3);
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}





.search-input {
  color: #000;
}





/*** 发帖 ***/

.post-title-box {
  border-bottom: 1px solid #d6d6d6;
  /*-webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);*/
}

.post-title {
  padding: 20rpx 10rpx 0 10rpx;
}

.post-content {
  width: 100%;
  height: 240rpx;
  padding: 12rpx;
  letter-spacing: 5px;
}

.video-box {
  width: 284rpx;
  height: 220rpx;
  margin-left: 14rpx;
}

.location-msg-box {
  overflow: hidden;
  max-width: 400rpx;
  margin: 0 10rpx;
  text-overflow: ellipsis;
  margin-top: auto;
  margin-bottom: 0px;
  display: inline-block;
  font-size: 24rpx;
  text-align: center;
  text-indent: 0px;
  height: 32rpx;
}

.position-box {
  height: 60rpx;
  min-height: 0px;
  margin-left: 40rpx;
  display: inline-block;
  margin-bottom: auto;
  position: relative;
  background-color: rgb(247, 247, 247);
  border-radius: 20px;
}

.comment-submit-box {
  height: 60rpx;
  min-height: 0px;
  position: relative;
  padding: 14rpx 0;
  right: 0px;
}

.position-icon {
  height: 32rpx;
  width: 32rpx;
  margin-left: 20rpx;
}

.post-submit {
  display: inline-block;
  height: 46rpx;
  min-height: 0px;
  width: 120rpx;
  position: absolute;
  right: 40rpx;
  line-height: 46rpx;
  text-align: center;
  font-size: 24rpx;
  background-size: initial;
}

.post-icon-container {
  width: 100%;
  height: 120rpx;
  display: flex;
  position: relative;
  border-style: solid none none;
  border-width: 2rpx;
  border-top-color: rgb(214, 214, 214);
  border-bottom-color: rgb(214, 214, 214);
  border-bottom-style: solid;
}

.post-icon-emoj-wrap {
  height: 120rpx;
  width: 20%;
  min-height: 0px;
  padding: 20rpx 50rpx 0px;
  display: inline-block;
  position: relative;
  background-color: rgba(245, 245, 245, 1);
}

.post-icon-desc {
  font-size: 24rpx;
  width: 64rpx;
  text-align: center;
}

/*** 表情图标 ***/

.post-icon-emoj {
  background: url(http://i.pengxun.cn//content/images/imgpost2/01/post-big-pic-01.png) no-repeat 0 -234px;
  background-size: 100%;
  height: 26px;
  width: 26px;
}

/*** 图片图标 ***/

.post-icon-img {
  background: url(http://i.pengxun.cn//content/images/imgpost2/01/post-big-pic-01.png) no-repeat 0 -286px;
  background-size: 100%;
  height: 26px;
  width: 26px;
}

/*** 声音图标 ***/

.post-icon-voice {
  background: url(http://i.pengxun.cn//content/images/imgpost2/01/post-big-pic-01.png) no-repeat 0 -338px;
  background-size: 100%;
  height: 26px;
  width: 26px;
}

/*** 视频图标 ***/

.post-icon-vedio {
  background: url(http://i.pengxun.cn//content/images/imgpost2/01/post-big-pic-01.png) no-repeat 0 -390px;
  background-size: 100%;
  height: 26px;
  width: 26px;
}

/*** 悬赏图标 ***/

.post-icon-reward {
  background: url(http://i.pengxun.cn//content/images/imgpost2/01/post-big-pic-01.png) no-repeat 0 -442px;
  background-size: 100%;
  height: 26px;
  width: 26px;
}

.post-type-container {
  position: relative;
  padding-top: 20rpx;
  border-width: 2rpx 2rpx 20rpx;
  border-style: none none solid;
  border-bottom-color: rgb(245, 245, 245);
  border-bottom-width: 20rpx;
}

.post-type-wrap {
  display: inline-block;
  margin-left: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-width: 1px;
  border-style: solid;
  border-radius: 2px;
  border-top-right-radius: 2px;
  border-top-left-radius: 2px;
}

.post-selected-type-wrap {
  display: inline-block;
  color: #17b5ee;
  margin-left: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border: 1px solid #17b5ee;
  border-radius: 2px;
  border-top-right-radius: 2px;
  border-top-left-radius: 2px;
}

.category-selected-delete {
  position: absolute;
  top: 55rpx;
  cursor: pointer;
  right: 30rpx;
  width: 60rpx;
  height: 60rpx;
  background: url(http://i.pengxun.cn//content/images/imgpost2/01/post-big-pic-03.png) no-repeat 0 0;
  background-size: 100%;
  border: 2rpx solid #17b5ee;
  border-radius: 100%;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  box-sizing: border-box;
}

.post-video-box {
  padding: 20rpx 30rpx;
}

.post-video-input {
  font: 13.3333px Arial;
  width: 100%;
  height: 200rpx;
}

.post-submit-box {
  widows: 100%;
  height: 52rpx;
}

.post-submit-vedio {
  height: 52rpx;
  width: 120rpx;
  margin-right: 80rpx;
  background: #17b5ee;
  color: #fff;
  letter-spacing: 1px;
  border-radius: 2px;
  font-size: 12px;
  text-align: center;
  line-height: 26px;
  box-sizing: content-box;
  padding: 0;
}

.post-upload-vedio {
  height: 52rpx;
  width: 100rpx;
  background: #17b5ee;
  color: #fff;
  letter-spacing: 1px;
  border-radius: 2px;
  font-size: 12px;
  text-align: center;
  line-height: 26px;
  box-sizing: content-box;
  padding: 0;
}



